<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".JoinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/together"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="어플 이름"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="80dp"/>

        <TextView
            android:id="@+id/join"
            android:layout_marginTop="10dp"
            android:background="#D3D3D3"
            android:text="회원가입"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/id"
                android:text="ID"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/ID_EditText"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text="아이디를 입력해주세요."
                android:textSize="20dp" />

            <Button
                android:id="@+id/idok"
                android:backgroundTint="#D3D3D3"
                android:text="확인"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/paaword"
                android:text="PASS\nWORD"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/PASSWORD_EditText"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text="비밀번호를 입력해주세요."
                android:textSize="20dp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/repassword"
                android:text="PASS\nWORD"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/rePASSWORD_EditText"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text="비밀번호를 다시 입력해주세요."
                android:textSize="20dp" />

            <Button
                android:id="@+id/pwok"
                android:text="확인"
                android:backgroundTint="#D3D3D3"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                android:layout_width="70dp"
                android:layout_height="70dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/number"
                android:text="닉네임"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/number_EditText"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text="닉네임을 입력해주세요."
                android:textSize="20dp" />

            <Button
                android:id="@+id/nbok"
                android:text="확인"
                android:backgroundTint="#D3D3D3"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                android:layout_width="70dp"
                android:layout_height="70dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/day"
                android:text="생년\n월일"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/day_EditText"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text="생년월일을 입력해주세요."
                android:textSize="20dp" />

            <Button
                android:id="@+id/dayok"
                android:text="확인"
                android:backgroundTint="#D3D3D3"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                android:layout_width="70dp"
                android:layout_height="70dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>